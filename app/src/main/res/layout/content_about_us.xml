<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mostafa.fatinapp2.AboutUs"
    tools:showIn="@layout/app_bar_about_us"
    android:background="@drawable/background2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:textColor="#FFFFFFFF"
        android:fontFamily="serif" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Who we are?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="normal|bold|italic"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />

            <TextView
                android:text="Fatin Furnishing based in Dubai United Arab Emirates Offers the highest quality interior furnishings to complement your home, Offices and five star Diamond Properties. we offer an extensive range of window and soft furnishings to include in your renovation project or to simply update some of those tired room in your home.  window furnishings including Blinds, Shutters, Awning and Curtains for both internal and external application and newly introduced Soft Furnishings such as Lounges, Upholstery, Wall Paper and Rugs are just some of the wonderful products available!  Ayub Ali, Director of Fatin Furnishings has had over 15, years’ experience in the industry. Ayub knows that just as important as quality of the product is the quality of both the measuring and the installation. Being able to install all window furnishings has allowed Ayub to fully understand what is required in each window opening , Ensuring thaty on the day of Installation his team of Qualified installer will guaranty a quality installation.!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                android:textColor="@android:color/black"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="See How we do it."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textAlignment="center"
                    android:textStyle="normal|bold|italic"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:text="Our Vision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="At ■|fatin we aims to provide our client the greatest and professional service which signifies a good value for money. With a vision to practice and display the highest degree of expertise and punctuality, we strive to exceed client’s expectations."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="Our Mission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="4dp"
                    android:fontFamily="serif"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:text="Our mission is to provide our all clients with a fresh and friendly approach to Interior Design. Our belief is that Interior Design is for everyone, regardless of their budget. We serve each client to explain their own sense of style with our wide range of collections."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:fontFamily="sans-serif"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="Our Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="4dp"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="We’re one of the best interior design companies in UAE because we’re one of the few that take the time to listen and truly understand what our Clients wants to achieve is. you can trust our interior design services in Dubai to become true your Dream Home."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:textAlignment="textStart" />

                <TextView
                    android:text="The Crew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:text="WE have a Good Team of Highly Professionals who are well trained to serve you on your projects as per your requirements."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:textAlignment="textStart"
                    android:textColor="#000" />

                <TextView
                    android:text="our Team Members are dedicated to their work and proficiency to fulfil your requirements."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18"
                    android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                    android:textAlignment="textStart" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp">

                    <ImageView
                        android:layout_width="150dp"
                        app:srcCompat="@drawable/ayoub"
                        android:id="@+id/imgayuob"
                        android:layout_height="170dp" />

                    <TextView
                        android:text="Mr. Ayuob Ali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView19"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                        android:fontFamily="serif"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:textStyle="normal|bold|italic"
                        android:textAlignment="textStart" />

                    <TextView
                        android:text="Business Manager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView20"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                        android:textColor="?android:attr/textColorTertiary"
                        android:textAlignment="textStart"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        app:srcCompat="@drawable/salam"
                        android:id="@+id/imgsalam"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <TextView
                        android:text="Mr. Abdul Salam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView21"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
                        android:fontFamily="serif"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:textStyle="normal|bold|italic"
                        android:textAlignment="textStart" />

                    <TextView
                        android:text="Managing Director"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                        android:textAlignment="textStart"
                        android:textColor="?android:attr/textColorTertiary" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
